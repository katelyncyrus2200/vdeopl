<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Video -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        app:use_controller="false"
        app:animation_enabled="false" />

    <!-- Center controls (hidden by default) -->
    <LinearLayout
        android:id="@+id/centerControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#66000000"
        android:visibility="gone">

        <!-- Back 15s -->
        <ImageButton
            android:id="@+id/btnBack15"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_rew_15" />

        <!-- Play / Pause -->
        <ImageButton
            android:id="@+id/btnPlayPause"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_play" />

        <!-- Forward 15s -->
        <ImageButton
            android:id="@+id/btnFwd15"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_fwd_15" />

    </LinearLayout>

    <!-- Optional: Audio/Subtitles in top-right (remove if you donâ€™t want them) -->
    <LinearLayout
        android:id="@+id/topRightButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/btnSubtitles"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_cc" />

        <ImageButton
            android:id="@+id/btnAudio"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_audio" />
    </LinearLayout>

</FrameLayout>
