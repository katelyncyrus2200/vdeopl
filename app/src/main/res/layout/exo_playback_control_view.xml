<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:background="#cc000000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@id/exo_prev"
            android:layout_margin="4dp"
            style="@style/ExoMediaButton" />

        <ImageButton
            android:id="@id/exo_rew"
            android:layout_margin="4dp"
            style="@style/ExoMediaButton.Rewind" />

        <ImageButton
            android:id="@id/exo_play_pause"
            android:layout_margin="4dp"
            style="@style/ExoMediaButton.Pause" />

        <ImageButton
            android:id="@id/exo_ffwd"
            android:layout_margin="4dp"
            style="@style/ExoMediaButton.FastForward" />

        <ImageButton
            android:id="@+id/exo_aspect_ratio"
            android:layout_margin="4dp"
            style="@style/ExoMediaButton"
            android:contentDescription="@string/exo_controls_aspect_ratio_description"
            android:src="@drawable/exo_controls_fullscreen_enter" />

        <ImageButton
            android:id="@id/exo_subtitle"
            android:layout_margin="4dp"
            style="@style/ExoStyledControls.Button.Bottom.CC" />

        <ImageButton
            android:id="@+id/exo_audio_track"
            android:layout_margin="4dp"
            style="@style/ExoMediaButton"
            android:contentDescription="@string/exo_controls_audio_description"
            android:src="@drawable/exo_controls_audiotrack" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="?actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@id/exo_position"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#ffbebebe"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false" />

        <com.google.android.exoplayer2.ui.DefaultTimeBar
            android:id="@id/exo_progress"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_margin="4dp"
            android:layout_weight="1" />

        <TextView
            android:id="@id/exo_duration"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#ffbebebe"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false" />
    </LinearLayout>

</LinearLayout>
